---
interface Props {
  space?: string
  recursive?: boolean
  class?: string
  style?: string
}

const { space, recursive, class: className, style } = Astro.props
---

<div
  class:list={['stack', { recursive }]}
  class={className}
  style={style || ''}
>
  <slot />
</div>

<style define:vars={{ space }}>
  .stack {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    --space: var(--space, 1.5rem);
  }
</style>
