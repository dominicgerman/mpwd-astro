---
interface Props {
  space?: string
  justifyContent?: string
  alignItems?: string
  class?: string
  style?: string
}

const {
  space,
  justifyContent,
  alignItems,
  class: className,
  style,
} = Astro.props
---

<ul
  class:list={['cluster', { justifyContent, alignItems }]}
  class={className}
  style={style || ''}
>
  <slot />
</ul>

<style define:vars={{ space, justifyContent, alignItems }}>
  .cluster {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space, 1rem);
  }
  .justifyContent {
    justify-content: var(--justifyContent);
  }
  .alignItems {
    align-items: var(--alignItems);
  }
</style>
