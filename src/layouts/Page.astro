---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      @font-face {
        font-family: 'Rubik';
        src: url(/fonts/Rubik-VariableFont_wght.ttf);
      }

      @font-face {
        font-family: 'Forum';
        src: url(/fonts/Forum-Regular.ttf);
      }
    </style>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --font-plain: 'Rubik', Helvetica, sans-serif;
    --font-special: 'Forum', Georgia, serif;
    --font-mono: Menlo, Courier, Courier New, Andale Mono, monospace;

    --color-light: #eee;
    --color-dark: #222;

    --border-thin: var(--s-5);
    --border-thick: var(--s-2);

    --measure: 65ch;
    --splitAfter: 0;
    --limit: 5;

    --ratio: 1.5;
    --s-5: calc(var(--s-4) / var(--ratio));
    --s-4: calc(var(--s-3) / var(--ratio));
    --s-3: calc(var(--s-2) / var(--ratio));
    --s-2: calc(var(--s-1) / var(--ratio));
    --s-1: calc(var(--s0) / var(--ratio));
    --s0: 1rem;
    --s1: calc(var(--s0) * var(--ratio));
    --s2: calc(var(--s1) * var(--ratio));
    --s3: calc(var(--s2) * var(--ratio));
    --s4: calc(var(--s3) * var(--ratio));
    --s5: calc(var(--s4) * var(--ratio));

    font-size: calc(0.333vw + 1em);
  }

  * {
    box-sizing: border-box;
    font-family: var(--font-plain);
    list-style: none;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-special);
  }

  .stack > * {
    margin-block: 0;
  }

  .stack > * + * {
    margin-block-start: var(--space, 1.5rem);
  }

  .splitAfter:only-child {
    block-size: 100%;
  }

  .stack.recursive * + * {
    margin-block-start: var(--space, 1.5rem);
  }

  .box * {
    color: inherit;
  }

  .with-sidebar {
    display: flex;
    flex-wrap: wrap;
    gap: var(--s1);
  }

  .with-sidebar > :first-child {
    flex-basis: 12rem;
    flex-grow: 1;
  }

  .with-sidebar > :last-child {
    flex-basis: 0;
    flex-grow: 999;
    min-inline-size: 65%;
  }

  .switcher > * {
    flex-grow: 1;
    flex-basis: calc((var(--threshold) - 100%) * 999);
  }

  .cover > * {
    margin-block: var(--coverSpace);
  }
  .cover > :first-child {
    margin-block-start: 0;
  }
  .cover > :last-child {
    margin-block-end: 0;
  }
  /* .cover > :not(:first-child):not(:last-child) {
    margin-block: auto;
  } */
</style>
